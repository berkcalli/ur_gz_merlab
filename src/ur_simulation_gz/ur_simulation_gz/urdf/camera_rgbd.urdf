<?xml version="1.0"?>
<robot name="camera_rgbd">



  <!-- Camera link -->
  <link name="camera_link">
    <!-- Visual -->
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
    </visual>

    <!-- Collision -->
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
    </collision>

    <!-- Inertial -->
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="0.000166667"
        iyy="0.000166667"
        izz="0.000166667"
        ixy="0.0"
        ixz="0.0"
        iyz="0.0"/>
    </inertial>
  </link>
  <link name="world" />
    <joint name="camera_fixer_joint" type="fixed">
        <origin xyz="0 0 0" rpy="-1.57 1.57 -1.57"/>
        <parent link="world"/>
        <child link="camera_link"/>
    </joint>

  <!-- Gazebo-specific camera sensor -->
  <gazebo reference="camera_link">
    <sensor name="camera" type="rgbd_camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>camera</topic>

      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.001</near>
          <far>100000</far>
        </clip>
      </camera>
      <depth_camera>
        <image>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.001</near>
          <far>100000</far>
        </clip>
      </depth_camera>
    </sensor>
  </gazebo>

</robot>