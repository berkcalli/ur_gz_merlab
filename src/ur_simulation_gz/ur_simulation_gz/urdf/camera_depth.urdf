<?xml version="1.0"?>
<robot name="camera">

  <!-- Camera link -->
  <link name="link">
    <!-- Visual -->
    <visual>
      <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>

    <!-- Collision -->
    <collision>
      <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <!-- Inertial -->
    <inertial>
      <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="0.000166667"
        iyy="0.000166667"
        izz="0.000166667"
        ixy="0.0"
        ixz="0.0"
        iyz="0.0"/>
    </inertial>
  </link>

  <!-- Gazebo-specific camera sensor -->
  <gazebo reference="link">
    <sensor name="camera" type="depth_camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>camera/depth_image</topic>

      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>320</width>
          <height>240</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

</robot>